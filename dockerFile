# 1️⃣ Use official PHP 8.2 FPM image
FROM php:8.2-fpm

# 2️⃣ Set working directory
WORKDIR /var/www/html

# 3️⃣ Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    zip \
    nano \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd zip \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# 4️⃣ Install Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# 5️⃣ Copy application code
COPY . .

# 6️⃣ Install PHP dependencies
RUN composer install --no-dev --optimize-autoloader

# 7️⃣ Copy environment file
# You can either use Render secrets or include a .env.production file
COPY .env.production .env

# 8️⃣ Set permissions
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# 9️⃣ Expose port
EXPOSE 8000

# 10️⃣ Cache Laravel configs for production
RUN php artisan config:cache
RUN php artisan route:cache
RUN php artisan view:cache

# 11️⃣ Start Laravel server
CMD php artisan serve --host=0.0.0.0 --port=8000
